@model IEnumerable<string> 
@Html.ActionLink("Todos os Produtos", "ListaProdutos", "Vitrine", null, new {@class ="btn btn-default btn-block btn-lg" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = "Vitrine",
    action = "ListaProdutos",
    categoria = link,
    pagina = 1
}, new 
{
    @class = "btn btn-default btn-block btn-lg " +
(link == ViewBag.CategoriaSelecionada ? "btn-primary" : "")
})
}

