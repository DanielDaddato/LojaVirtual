@model Daddato.Lojavirtual.Web.Entidades.Pedido
@{
    ViewBag.Title = "Loja Virtual - Fechar Pedido";
}

<h1>Fechar Pedido</h1>
<h3>Dados Pessoais</h3>
@using (Html.BeginForm())
{

    @Html.ValidationSummary("",new {@class ="alert alert-danger" })

<div class="form-group">
    @Html.LabelFor(x => x.NomeCliente)
    @Html.TextBoxFor(x => x.NomeCliente,new{@class="form-control" })

</div>

<div class="form-group">
    @Html.LabelFor(x => x.Email)
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

</div>

<div class="form-group">
    @Html.LabelFor(x => x.Telefone)
    @Html.TextBoxFor(x => x.Telefone, new { @class = "form-control" })
</div>
<h3>Dados de Envio</h3>
<div class="form-group">
    @Html.LabelFor(x => x.Cep)
    @Html.TextBoxFor(x => x.Cep, new { @class = "form-control" })
</div>
    <div class="form-group col-sm-10 nopadding-left">
        @Html.LabelFor(x => x.Endereco)
        @Html.TextBoxFor(x => x.Endereco, new { @class = "form-control "})
    </div>
    <div class="form-group col-sm-2 nopadding-right">
        @Html.LabelFor(x => x.Numero)
        @Html.TextBoxFor(x => x.Numero, new { @class = "form-control"})
    </div>

<div class="form-group">
    @Html.LabelFor(x => x.Bairro)
    @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control" })
</div>

<div class="form-group">
    <div class="col-sm-11 pull-left nopadding-left">
                @Html.LabelFor(x => x.Cidade)
                @Html.TextBoxFor(x => x.Cidade, new { @class = "form-control" })
    </div>
    <div class="col-sm-1 nopadding-right">
        @Html.LabelFor(x => x.UF)
        @Html.TextBoxFor(x => x.UF, new { @class = "form-control" })
    </div>
</div>

<h3>Opções</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.EmbrulharPresente, new { @class = "form-control" }) Embrulhar para presente?
        </label>
    </div>

    <input type="submit" class="btn btn-primary" value="Fechar" />
}